<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/waterBlue"/>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_first_screen"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <EditText
            android:id="@+id/EnterUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="240dp"
            android:focusable="true"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:background="@null"/>

        <EditText
            android:id="@+id/EnterUserWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="285dp"
            android:layout_marginBottom="50dp"
            android:ems="10"
            android:focusable="true"
            android:hint="Weight in Kg"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:background="@null"/>

        <EditText
            android:id="@+id/EnterSleepingHours"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="333dp"
            android:focusable="true"
            android:hint="Avg. Sleeping Hours"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:background="@null"/>

        <EditText
            android:id="@+id/EnterUserActivity"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="67dp"
            android:layout_marginTop="380dp"
            android:focusable="true"
            android:hint="Weekly Training Hours"
            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            android:background="@null"/>

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="65dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:text="Gender:"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/RunningButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="@color/black"
                android:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>

            <RadioButton
                android:id="@+id/WalkingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="@color/black"
                android:buttonTint="@color/black"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
        </RadioGroup>

        <Button
            android:id="@+id/contButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="472dp"
            android:textSize="20sp"
            android:text="Continue"
            android:textColor="#49688C"
            android:background="@drawable/rounded_button"
            android:textStyle="bold" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
